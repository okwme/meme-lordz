{
  "name": "truffle-shavings",
  "version": "1.0.0",
  "description": "Truffle Boilerplate with solium, linguist, zeppelin, migrations, tests &tc",
  "scripts": {
    "test": "truffle test test/*.test.js",
    "deploy": "truffle migrate --reset --compile-all",
    "lint": "solium --dir contracts/",
    "lint:watch": "solium --watch --dir contracts/",
    "lint:fix": "solium  --dir contracts/ --fix",
    "test:mocha": "mocha --opts ./mocha.opts  ./test/*.js --reporter spec"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "bancor-contracts": "https://github.com/bancorprotocol/contracts.git"
  },
  "devDependencies": {
    "dotenv": "^5.0.1",
    "ethjs-abi": "^0.2.1",
    "ganache-cli": "^6.1.8",
    "mocha": "^5.2.0",
    "solium": "^1.1.7",
    "truffle-hdwallet-provider": "^0.0.5",
    "web3": "^1.0.0-beta.36",
    "web3-utils": "^1.0.0-beta.34",
    "zeppelin-solidity": "^1.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/okwme/truffle-boilerplate.git"
  },
  "keywords": [
    "truffle",
    "ethereum",
    "web3"
  ],
  "author": "Billy Rennekamp <billy.rennekamp@gmail.com>",
  "license": "ISC"
}
